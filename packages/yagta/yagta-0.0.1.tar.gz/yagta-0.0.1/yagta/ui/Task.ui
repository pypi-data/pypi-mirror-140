<interface>
  <template class="Task" parent="GtkBox">
    <style>
      <class name="task"/>
    </style>
    <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkCheckButton" id="done_toggle"></object>
        </child>
        <child>
          <object class="GtkEntry" id="title">
            <property name="hexpand">True</property>
          </object>
        </child>
        <child>
          <object class="CalendarEntry" id="start">
          </object>
        </child>
        <child>
          <object class="CalendarEntry" id="due">
          </object>
        </child>
        <child>
          <object class="GtkButton" id="add_child">
            <property name="icon-name">list-add-symbolic</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="delete_button">
            <property name="icon-name">edit-delete-symbolic</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="child_tasks">
        <style>
          <class name="child_tasks"/>
        </style>
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <property name="spacing">10</property>
      </object>
    </child>
  </template>
</interface>