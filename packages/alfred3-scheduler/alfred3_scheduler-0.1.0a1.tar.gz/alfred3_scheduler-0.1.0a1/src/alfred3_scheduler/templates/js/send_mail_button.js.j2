$(document).on("click", "#{{ name }}-send", function() {
        
        // send data to alfred
        var data = $("#form").serializeArray();
        $.post("{{ set_data_url }}", data);

        setTimeout(function() {
            // initiate spinner
            $( "#{{ name }}-spinner" ).html("<div class='spinner-border' role='status'><span class='sr-only'>Loading...</span></div>")
        }, 100)

        // call mail-sending function
        $.get( "{{ url }}", function(data) {

            // display feedback
            setTimeout(function() {
                $( "#{{ name }}-spinner" ).html("")
                $( "#{{ name }}-feedback" ).html(data)
            }, 1000)

        })
})
