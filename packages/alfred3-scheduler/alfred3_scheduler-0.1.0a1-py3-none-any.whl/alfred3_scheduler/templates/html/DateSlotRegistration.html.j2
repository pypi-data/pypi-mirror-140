<div class="card" style="width: 18rem;">
<h5 class="card-header text-center">
{{ date }}
</h5>
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted text-center">{{ day }}</h6>
    
    <div class="row">
    <div class="col-12 text-center">{{ start_text }} <b>{{ start_time }} {{ start_time_unit }}</b></div>
    {% if duration %}
      <div class="col-12 text-center">{{ duration_text }}: <b>{{ duration }}</b></div>
    {% endif %}
    </div>
    
    <button 
    type="button" 
    class="btn btn-block btn-outline-{% if disabled %}secondary{% else %}primary{% endif %} mt-2" 
    data-toggle="modal" 
    data-target="#{{ name}}-modal"
    {% if disabled %}disabled{% endif %}
    >
        {{ choose_text }}
    </button>

    <div class="row mt-1">
    <div class="col text-center"><span class="badge badge-dark">{{ nopen }}</span> {{ free_slots_text }}</div>
    </div>
    {% if address %}
    <hr>
    <div class="row">
      <div class="col text-center">
      {{ address }}
      </div>
      </div>
    {% endif %}

    {% if msg %}
    <hr>
      <div class="row">
      <div class="col text-center">
      {{ msg }}
      </div>
      </div>
    {% endif %}
  </div>

</div>
</div>
</div>


<!-- Modal -->
<div class="modal fade" id="{{ name }}-modal" tabindex="-1" role="dialog" aria-labelledby="{{ name }}-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h5 class="modal-title" id="{{ name }}-modal-label">{{ confirmation_heading }}</h5>
          
          <button type="button" class="close" data-dismiss="modal" aria-label="{{ close_text }}">
            <span aria-hidden="true">&times;</span>
          </button>

        </div>
        <div class="modal-body">
            <div class="row mb-2">
            <div class="col-12">{{ date_text }}: <b>{{ day }}, {{ date }}</b></div>
            <div class="col-12">{{ start_text }} <b>{{ start_time }} {{ start_time_unit }}</b></div>
            <div class="col-12">{{ duration_text }}: <b>{{ duration }} {{ duration_unit }}</b></div>
            </div>
          {{ modal_content }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ close_text }}</button>
          <button type="button" class="btn btn-primary" id="{{ name }}-button">{{ confirm_button }}</button>
          <span id="{{ name }}-spinner"></span>
          <input type="hidden" id="{{ name }}" name="{{ name }}">
        </div>
      </div>
